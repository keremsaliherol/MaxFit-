@model Maxfit_.Models.Member

@{
    ViewData["Title"] = "New Member Registration";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded h-100 p-4 border border-primary">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0 text-primary"><i class="fa fa-user-plus me-2"></i>New Member Registration</h6>
                    <a asp-action="Index" class="btn btn-outline-primary btn-sm">Back to List</a>
                </div>

                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control bg-dark text-white border-0" required
                                placeholder="e.g. John">
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control bg-dark text-white border-0" required
                                placeholder="e.g. Doe">
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label">Gender</label>
                            <select asp-for="Gender" class="form-select bg-dark text-white border-0">
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BirthDate" class="form-label">Birth Date</label>
                            <input asp-for="BirthDate" type="date" class="form-control bg-dark text-white border-0">
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number</label>
                            <input asp-for="Phone" class="form-control bg-dark text-white border-0"
                                placeholder="+90 XXX XXX XX XX">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Email Address</label>
                            <input asp-for="Email" type="email" class="form-control bg-dark text-white border-0"
                                placeholder="john@example.com">
                        </div>

                        <div class="col-12 mb-3">
                            <label asp-for="Address" class="form-label">Full Address</label>
                            <textarea asp-for="Address" class="form-control bg-dark text-white border-0" rows="2"
                                placeholder="Street, City, Postcode"></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="MembershipTypeId" class="form-label">Membership Plan</label>
                            <select asp-for="MembershipTypeId" class="form-select bg-dark text-white border-0"
                                asp-items="ViewBag.MembershipTypeId">
                                <option value="">-- Select Plan --</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3 d-flex align-items-end">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                <label class="form-check-label" asp-for="IsActive">Set as Active</label>
                            </div>
                        </div>

                        <div class="col-12 mb-3">
                            <label class="form-label">Profile Photo</label>
                            <input type="file" name="PhotoFile" id="PhotoFile"
                                class="form-control bg-dark text-white border-0" accept="image/*" />
                            <small class="text-muted">Upload member's profile photo (optional)</small>
                            <div id="photoPreview" class="mt-3" style="display:none;">
                                <img id="previewImg" src="#" alt="Preview" class="img-fluid rounded-circle"
                                    style="width: 150px; height: 150px; object-fit: cover;" />
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary py-3 w-100 fw-bold text-uppercase">
                            <i class="fa fa-save me-2"></i>Save Member
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Image preview
        document.getElementById('PhotoFile').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('photoPreview').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}