@model Maxfit_.Models.Member
@{
    ViewData["Title"] = "My Dashboard";
}

<!-- Premium Hero Section with Glassmorphism -->
<div class="member-hero-section position-relative overflow-hidden mb-5">
    <div class="hero-bg-overlay"></div>
    <div class="container-fluid px-5 py-5">
        @if (TempData["SuccessMessage"] != null)
        {
                <div class="alert alert-success alert-dismissible fade show glass-card border-0 shadow-lg mb-4" role="alert">
                    <i class="fa fa-check-circle me-2"></i>
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
        }

        <!-- Welcome Banner with Profile -->
        <div class="welcome-banner glass-card p-5 mb-5 position-relative overflow-hidden">
            <div class="welcome-glow"></div>
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="d-flex align-items-center">
                        <div class="profile-photo-wrapper position-relative me-4">
                            @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                            {
                                    <img class="profile-photo" src="@Model.PhotoUrl" alt="Profile">
                            }
                            else
                            {
                                    <div class="profile-photo-placeholder">
                                        <i class="fa fa-user"></i>
                                    </div>
                            }
                            <div class="status-indicator @(Model.IsActive ? "status-active" : "status-inactive")"></div>
                        </div>
                        <div>
                            <h1 class="display-4 fw-bold text-white mb-2 welcome-text">
                                Welcome back, <span class="gradient-text">@Model.FirstName</span>!
                            </h1>
                            <p class="lead text-white-70 mb-3">
                                <i class="fa fa-id-badge me-2 gradient-text"></i>
                                @(Model.MembershipType?.Name ?? "No Membership")
                            </p>
                            <div class="d-flex gap-2">
                                <span class="badge-premium @(Model.IsActive ? "badge-active" : "badge-inactive")">
                                    <i class="fa fa-check-circle me-1"></i>
                                    @(Model.IsActive ? "Active Member" : "Inactive")
                                </span>
                                <span class="badge-premium badge-date">
                                    <i class="fa fa-calendar me-1"></i>
                                    Since @Model.RegisterDate.ToString("MMM yyyy")
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-action="UpdateProfile" class="btn-premium btn-edit">
                        <i class="fa fa-user-edit me-2"></i>
                        Edit Profile
                    </a>
                </div>
            </div>
        </div>

        <!-- Premium Stats Grid -->
        <div class="row g-4 mb-5">
            <!-- Total Check-ins -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card-green">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-door-open"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Total Check-ins</p>
                        <h2 class="stat-value counter">@(ViewBag.TotalCheckIns ?? 0)</h2>
                    </div>
                    <div class="stat-glow stat-glow-green"></div>
                </div>
            </div>

            <!-- My Classes -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card-blue">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-dumbbell"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Registered Classes</p>
                        <h2 class="stat-value counter">@Model.CourseRegistrations.Count</h2>
                    </div>
                    <div class="stat-glow stat-glow-blue"></div>
                </div>
            </div>

            <!-- Membership Duration -->
            <div class="col-lg-3 col-md-6">
                <div class="stat-card stat-card-purple">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-trophy"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Days as Member</p>
                        <h2 class="stat-value counter">@((DateTime.Now - Model.RegisterDate).Days)</h2>
                    </div>
                    <div class="stat-glow stat-glow-purple"></div>
                </div>
            </div>

            <!-- Quick Action -->
            <div class="col-lg-3 col-md-6">
                <a asp-action="AvailableClasses" class="text-decoration-none h-100 d-block">
                    <div class="stat-card stat-card-orange stat-card-action">
                        <div class="stat-icon-wrapper">
                            <i class="fa fa-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <p class="stat-label">Browse Classes</p>
                            <h2 class="stat-value">Join Now</h2>
                        </div>
                        <div class="stat-glow stat-glow-orange"></div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Featured Classes Carousel -->
        <div class="featured-section mb-5">
            <div class="section-header mb-4">
                <h2 class="section-title text-white">
                    <span class="gradient-text">Featured</span> Programs
                </h2>
                <p class="section-subtitle text-white-70">Discover our popular training programs</p>
            </div>

            <div id="classCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
                <div class="carousel-inner">
                    <!-- Slide 1: CrossFit -->
                    <div class="carousel-item active">
                        <div class="program-card">
                            <img src="/images/crossfit.webp" class="program-bg" alt="CrossFit">
                            <div class="program-overlay"></div>
                            <div class="program-content">
                                <div class="program-badge">
                                    <i class="fa fa-fire me-2"></i>High Intensity
                                </div>
                                <h2 class="program-title">CrossFit Training</h2>
                                <p class="program-description">
                                    High-intensity functional fitness for peak performance. Build strength, 
                                    endurance, and power with our expert-led CrossFit sessions.
                                </p>
                                <div class="program-features mb-4">
                                    <span class="feature-tag"><i class="fa fa-clock me-1"></i>60 min</span>
                                    <span class="feature-tag"><i class="fa fa-users me-1"></i>Max 12</span>
                                    <span class="feature-tag"><i class="fa fa-chart-line me-1"></i>Advanced</span>
                                </div>
                                <a asp-action="AvailableClasses" class="btn-premium btn-light-glass">
                                    <i class="fa fa-arrow-right me-2"></i>
                                    Join Classes
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Slide 2: Yoga -->
                    <div class="carousel-item">
                        <div class="program-card">
                            <img src="/images/yoga.webp" class="program-bg" alt="Yoga">
                            <div class="program-overlay program-overlay-purple"></div>
                            <div class="program-content">
                                <div class="program-badge program-badge-purple">
                                    <i class="fa fa-spa me-2"></i>Mindfulness
                                </div>
                                <h2 class="program-title">Yoga & Meditation</h2>
                                <p class="program-description">
                                    Find your inner peace and flexibility through guided yoga and meditation. 
                                    Perfect for all skill levels.
                                </p>
                                <div class="program-features mb-4">
                                    <span class="feature-tag"><i class="fa fa-clock me-1"></i>45 min</span>
                                    <span class="feature-tag"><i class="fa fa-users me-1"></i>Max 15</span>
                                    <span class="feature-tag"><i class="fa fa-leaf me-1"></i>All Levels</span>
                                </div>
                                <a asp-action="AvailableClasses" class="btn-premium btn-light-glass">
                                    <i class="fa fa-arrow-right me-2"></i>
                                    Explore Classes
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modern Carousel Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#classCarousel" data-bs-slide="prev">
                    <div class="carousel-control-icon">
                        <i class="fa fa-chevron-left"></i>
                    </div>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#classCarousel" data-bs-slide="next">
                    <div class="carousel-control-icon">
                        <i class="fa fa-chevron-right"></i>
                    </div>
                </button>

                <!-- Modern Indicators -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#classCarousel" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#classCarousel" data-bs-slide-to="1"></button>
                </div>
            </div>
        </div>

        <!-- My Upcoming Classes -->
        <div class="classes-section">
            <div class="section-header mb-4">
                <h2 class="section-title text-white">
                    <span class="gradient-text">My</span> Upcoming Classes
                </h2>
                <p class="section-subtitle text-white-70">Your registered training sessions</p>
            </div>

            <div class="glass-card p-0 overflow-hidden">
                <div class="table-responsive">
                    <table class="table-premium mb-0">
                        <thead>
                            <tr>
                                <th><i class="fa fa-calendar me-2"></i>Date & Time</th>
                                <th><i class="fa fa-dumbbell me-2"></i>Class Name</th>
                                <th><i class="fa fa-user-tie me-2"></i>Trainer</th>
                                <th><i class="fa fa-info-circle me-2"></i>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CourseRegistrations.Any())
                            {
                                @foreach (var reg in Model.CourseRegistrations.OrderByDescending(r => r.RegistrationDate).Take(10))
                                {
                                            <tr class="table-row-hover">
                                                <td>
                                                    <div class="class-datetime">
                                                        <i class="fa fa-clock me-2 gradient-text"></i>
                                                        <span>@reg.CourseSession?.StartTime.ToString("MMM dd, yyyy")</span>
                                                        <small class="d-block text-white-50 ms-4 mt-1">
                                                    @reg.CourseSession?.StartTime.ToString("HH:mm")
                                                        </small>
                                                    </div>
                                                </td>
                                                <td class="fw-bold text-white">@reg.CourseSession?.Class?.Name</td>
                                                <td class="text-white-70">
                                            @reg.CourseSession?.Trainer?.FirstName @reg.CourseSession?.Trainer?.LastName
                                                </td>
                                                <td>
                                            @if (reg.CourseSession?.IsCanceled == true)
                                            {
                                                            <span class="badge-status badge-canceled">
                                                                <i class="fa fa-times-circle me-1"></i>Canceled
                                                            </span>
                                            }
                                            else if (reg.CourseSession?.StartTime < DateTime.Now)
                                            {
                                                            <span class="badge-status badge-completed">
                                                                <i class="fa fa-check-circle me-1"></i>Completed
                                                            </span>
                                            }
                                            else
                                            {
                                                            <span class="badge-status badge-upcoming">
                                                                <i class="fa fa-arrow-circle-right me-1"></i>Upcoming
                                                            </span>
                                            }
                                                </td>
                                            </tr>
                                }
                            }
                            else
                            {
                                    <tr>
                                        <td colspan="4" class="text-center py-5">
                                            <div class="empty-state">
                                                <i class="fa fa-calendar-times fa-3x mb-3 text-white-30"></i>
                                                <p class="text-white-50 mb-3">No classes registered yet.</p>
                                                <a asp-action="AvailableClasses" class="btn-premium btn-sm-glass">
                                                    <i class="fa fa-search me-2"></i>Browse Available Classes
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Premium Member Dashboard Styles */

.member-hero-section {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 50%, #0f1419 100%);
    position: relative;
}

.hero-bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(13, 110, 253, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(111, 66, 193, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

/* Glass Card Effect */
.glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

/* Welcome Banner */
.welcome-banner {
    animation: fadeInUp 0.8s ease-out;
}

.welcome-glow {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(13, 110, 253, 0.2) 0%, transparent 70%);
    filter: blur(60px);
    animation: pulse 4s ease-in-out infinite;
}

.profile-photo-wrapper {
    width: 120px;
    height: 120px;
}

.profile-photo {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(13, 110, 253, 0.3);
    box-shadow: 0 8px 24px rgba(13, 110, 253, 0.3);
}

.profile-photo-placeholder {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    color: white;
    border: 4px solid rgba(13, 110, 253, 0.3);
}

.status-indicator {
    position: absolute;
    bottom: 8px;
    right: 8px;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 3px solid #0f1419;
}

.status-active {
    background: #10b981;
    box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
    animation: pulse-green 2s ease-in-out infinite;
}

.status-inactive {
    background: #ef4444;
}

.gradient-text {
    background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.text-white-70 {
    color: rgba(255, 255, 255, 0.7);
}

.text-white-50 {
    color: rgba(255, 255, 255, 0.5);
}

.text-white-30 {
    color: rgba(255, 255, 255, 0.3);
}

/* Premium Badges */
.badge-premium {
    padding: 8px 16px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
}

.badge-active {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.badge-inactive {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
}

.badge-date {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Premium Button */
.btn-premium {
    padding: 14px 32px;
    border-radius: 16px;
    font-weight: 600;
    border: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
}

.btn-edit {
    background: linear-gradient(135deg, #6f42c1 0%, #5a31a8 100%);
    color: white;
    box-shadow: 0 8px 24px rgba(111, 66, 193, 0.3);
}

.btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(111, 66, 193, 0.4);
    color: white;
}

.btn-light-glass {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn-light-glass:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateX(5px);
    color: white;
}

.btn-sm-glass {
    padding: 10px 24px;
    font-size: 14px;
    background: rgba(13, 110, 253, 0.2);
    border: 1px solid rgba(13, 110, 253, 0.3);
    color: white;
    border-radius: 12px;
}

.btn-sm-glass:hover {
    background: rgba(13, 110, 253, 0.3);
    color: white;
}

/* Stat Cards */
.stat-card {
    position: relative;
    padding: 32px;
    border-radius: 24px;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: default;
}

.stat-card:hover {
    transform: translateY(-8px);
    border-color: currentColor;
}

.stat-card-action {
    cursor: pointer;
}

.stat-card-green:hover { border-color: #10b981; }
.stat-card-blue:hover { border-color: #0d6efd; }
.stat-card-purple:hover { border-color: #6f42c1; }
.stat-card-orange:hover { border-color: #f59e0b; }

.stat-icon-wrapper {
    width: 64px;
    height: 64px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
}

.stat-card-green .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.1) 100%);
    color: #10b981;
}

.stat-card-blue .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(13, 110, 253, 0.2) 0%, rgba(10, 88, 202, 0.1) 100%);
    color: #0d6efd;
}

.stat-card-purple .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(111, 66, 193, 0.2) 0%, rgba(90, 49, 168, 0.1) 100%);
    color: #6f42c1;
}

.stat-card-orange .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.1) 100%);
    color: #f59e0b;
}

.stat-content {
    position: relative;
    z-index: 1;
}

.stat-label {
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.stat-value {
    color: white;
    font-size: 36px;
    font-weight: 700;
    margin: 0;
    line-height: 1;
}

.stat-glow {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
}

.stat-card:hover .stat-glow {
    opacity: 1;
}

.stat-glow-green {
    background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, transparent 70%);
    top: -50%;
    right: -50%;
}

.stat-glow-blue {
    background: radial-gradient(circle, rgba(13, 110, 253, 0.3) 0%, transparent 70%);
    top: -50%;
    right: -50%;
}

.stat-glow-purple {
    background: radial-gradient(circle, rgba(111, 66, 193, 0.3) 0%, transparent 70%);
    top: -50%;
    right: -50%;
}

.stat-glow-orange {
    background: radial-gradient(circle, rgba(245, 158, 11, 0.3) 0%, transparent 70%);
    top: -50%;
    right: -50%;
}

/* Section Headers */
.section-header {
    text-align: center;
}

.section-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 8px;
}

.section-subtitle {
    font-size: 18px;
}

/* Program Cards (Carousel) */
.program-card {
    position: relative;
    height: 550px;
    border-radius: 32px;
    overflow: hidden;
}

.program-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: brightness(0.5);
}

.program-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(13, 110, 253, 0.4) 0%, rgba(0, 0, 0, 0.8) 100%);
}

.program-overlay-purple {
    background: linear-gradient(135deg, rgba(111, 66, 193, 0.4) 0%, rgba(0, 0, 0, 0.8) 100%);
}

.program-content {
    position: relative;
    z-index: 2;
    padding: 60px;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
}

.program-badge {
    display: inline-flex;
    align-items: center;
    padding: 10px 20px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    color: white;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 24px;
    width: fit-content;
}

.program-badge-purple {
    background: rgba(111, 66, 193, 0.25);
    border-color: rgba(111, 66, 193, 0.5);
}

.program-title {
    font-size: 52px;
    font-weight: 700;
    color: white;
    margin-bottom: 16px;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
}

.program-description {
    font-size: 18px;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 24px;
    max-width: 600px;
    line-height: 1.6;
}

.program-features {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
}

.feature-tag {
    padding: 8px 16px;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    color: white;
    font-size: 14px;
    font-weight: 500;
}

/* Carousel Controls */
.carousel-control-prev,
.carousel-control-next {
    width: 60px;
    opacity: 1;
}

.carousel-control-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.carousel-control-icon:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: scale(1.1);
}

.carousel-control-icon i {
    color: white;
    font-size: 20px;
}

.carousel-indicators {
    bottom: 30px;
}

.carousel-indicators button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid white;
    opacity: 0.5;
    transition: all 0.3s ease;
}

.carousel-indicators button.active {
    opacity: 1;
    transform: scale(1.2);
}

/* Premium Table */
.table-premium {
    width: 100%;
}

.table-premium thead {
    background: rgba(255, 255, 255, 0.05);
}

.table-premium thead th {
    padding: 20px 24px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 1px;
    border: none;
