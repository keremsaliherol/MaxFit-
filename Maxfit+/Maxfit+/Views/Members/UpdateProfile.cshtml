@model Maxfit_.Models.Member

@{
    ViewData["Title"] = "Update My Profile";
}

<!-- Premium Profile Edit Section -->
<div class="profile-edit-section position-relative overflow-hidden">
    <div class="hero-bg-overlay"></div>
    <div class="container-fluid px-5 py-5">

        <!-- Header with Back Button -->
        <div class="d-flex align-items-center justify-content-between mb-5">
            <div>
                <h1 class="display-5 fw-bold text-white mb-2">
                    <span class="gradient-text">Edit</span> Profile
                </h1>
                <p class="text-white-70 mb-0">Update your personal information</p>
            </div>
            <a asp-action="MemberDashboard" class="btn-premium btn-back">
                <i class="fa fa-arrow-left me-2"></i>
                Back to Dashboard
            </a>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show glass-card border-0 shadow-lg mb-4" role="alert">
                <i class="fa fa-check-circle me-2"></i>
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger glass-card border-0 mb-4" role="alert">
            </div>

            <input type="hidden" asp-for="MemberId" />
            <input type="hidden" asp-for="PhotoUrl" />

            <div class="row g-4">
                <!-- Profile Photo Card -->
                <div class="col-lg-4">
                    <div class="glass-card p-5 text-center sticky-top" style="top: 100px;">
                        <div class="profile-photo-section mb-4">
                            <div class="profile-photo-container position-relative d-inline-block">
                                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                                {
                                    <img id="profilePreview" src="@Model.PhotoUrl" alt="Profile Photo"
                                        class="profile-photo-large">
                                }
                                else
                                {
                                    <div id="profilePreview" class="profile-photo-large profile-placeholder">
                                        <i class="fa fa-user"></i>
                                    </div>
                                }
                                <div class="photo-status-indicator"></div>
                                <label for="profilePhoto" class="photo-upload-btn">
                                    <i class="fa fa-camera"></i>
                                </label>
                                <input type="file" id="profilePhoto" name="profilePhoto" accept="image/*" class="d-none"
                                    onchange="previewImage(this)">
                            </div>
                        </div>

                        <h4 class="text-white mb-2">@Model.FirstName @Model.LastName</h4>
                        <p class="text-white-50 mb-3">
                            <i class="fa fa-envelope me-2"></i>@Model.Email
                        </p>
                        <div class="upload-info">
                            <i class="fa fa-info-circle me-2"></i>
                            <small class="text-white-50">Click camera icon to upload<br>Max size: 5MB</small>
                        </div>
                    </div>
                </div>

                <!-- Form Fields Card -->
                <div class="col-lg-8">
                    <div class="glass-card p-5">
                        <h5 class="text-white mb-4">
                            <i class="fa fa-user-edit me-2 gradient-text"></i>
                            Personal Information
                        </h5>

                        <div class="row g-4 mb-4">
                            <!-- First Name -->
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label asp-for="FirstName" class="form-label-modern">
                                        <i class="fa fa-user me-2"></i>First Name
                                    </label>
                                    <input asp-for="FirstName" class="form-control-modern" required />
                                    <span asp-validation-for="FirstName" class="validation-message"></span>
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label asp-for="LastName" class="form-label-modern">
                                        <i class="fa fa-user me-2"></i>Last Name
                                    </label>
                                    <input asp-for="LastName" class="form-control-modern" required />
                                    <span asp-validation-for="LastName" class="validation-message"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <!-- Email (Read Only) -->
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label asp-for="Email" class="form-label-modern">
                                        <i class="fa fa-envelope me-2"></i>Email Address
                                    </label>
                                    <input asp-for="Email" class="form-control-modern form-control-readonly" readonly />
                                    <small class="text-white-50 mt-2 d-block">
                                        <i class="fa fa-lock me-1"></i>Email cannot be changed
                                    </small>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6">
                                <div class="form-group-modern">
                                    <label asp-for="Phone" class="form-label-modern">
                                        <i class="fa fa-phone me-2"></i>Phone Number
                                    </label>
                                    <input asp-for="Phone" class="form-control-modern" type="tel"
                                        placeholder="+1 (555) 123-4567" />
                                    <span asp-validation-for="Phone" class="validation-message"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Address -->
                        <div class="form-group-modern mb-5">
                            <label asp-for="Address" class="form-label-modern">
                                <i class="fa fa-map-marker-alt me-2"></i>Address
                            </label>
                            <textarea asp-for="Address" class="form-control-modern" rows="4"
                                placeholder="Enter your full address..."></textarea>
                            <span asp-validation-for="Address" class="validation-message"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-end">
                            <a asp-action="MemberDashboard" class="btn-premium btn-secondary-glass">
                                <i class="fa fa-times me-2"></i>
                                Cancel
                            </a>
                            <button type="submit" class="btn-premium btn-save">
                                <i class="fa fa-check me-2"></i>
                                Save Changes
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<style>
    /* Premium Profile Edit Styles */

    .profile-edit-section {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 50%, #0f1419 100%);
        position: relative;
    }

    .hero-bg-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:
            radial-gradient(circle at 20% 30%, rgba(13, 110, 253, 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 70%, rgba(111, 66, 193, 0.1) 0%, transparent 50%);
        pointer-events: none;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.03);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .gradient-text {
        background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .text-white-70 {
        color: rgba(255, 255, 255, 0.7);
    }

    .text-white-50 {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Buttons */
    .btn-premium {
        padding: 14px 32px;
        border-radius: 16px;
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-back {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-back:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(-5px);
        color: white;
    }

    .btn-save {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        box-shadow: 0 8px 24px rgba(16, 185, 129, 0.3);
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 32px rgba(16, 185, 129, 0.4);
        color: white;
    }

    .btn-secondary-glass {
        background: rgba(255, 255, 255, 0.05);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .btn-secondary-glass:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    /* Profile Photo */
    .profile-photo-container {
        margin-bottom: 24px;
    }

    .profile-photo-large {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid rgba(13, 110, 253, 0.3);
        box-shadow: 0 8px 32px rgba(13, 110, 253, 0.3);
        transition: all 0.3s ease;
    }

    .profile-photo-large:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 48px rgba(13, 110, 253, 0.5);
    }

    .profile-placeholder {
        background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 80px;
        color: white;
    }

    .photo-status-indicator {
        position: absolute;
        bottom: 30px;
        right: 30px;
        width: 24px;
        height: 24px;
        background: #10b981;
        border-radius: 50%;
        border: 3px solid #0f1419;
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
        animation: pulse-green 2s ease-in-out infinite;
    }

    .photo-upload-btn {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #6f42c1 0%, #5a31a8 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 16px rgba(111, 66, 193, 0.4);
        color: white;
        font-size: 20px;
    }

    .photo-upload-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 8px 24px rgba(111, 66, 193, 0.6);
    }

    .upload-info {
        background: rgba(255, 255, 255, 0.05);
        padding: 12px 20px;
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Form Styles */
    .form-group-modern {
        position: relative;
    }

    .form-label-modern {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 12px;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-control-modern {
        width: 100%;
        padding: 16px 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: white;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-control-modern:focus {
        outline: none;
        background: rgba(255, 255, 255, 0.08);
        border-color: #0d6efd;
        box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.1);
    }

    .form-control-modern::placeholder {
        color: rgba(255, 255, 255, 0.3);
    }

    .form-control-readonly {
        background: rgba(255, 255, 255, 0.02);
        cursor: not-allowed;
        opacity: 0.6;
    }

    .validation-message {
        color: #ef4444;
        font-size: 13px;
        margin-top: 8px;
        display: block;
    }

    textarea.form-control-modern {
        resize: vertical;
        min-height: 120px;
    }

    /* Animations */
    @@keyframes pulse-green {

        0%,
        100% {
            box-shadow: 0 0 20px rgba(16, 185, 129, 0.6);
        }

        50% {
            box-shadow: 0 0 30px rgba(16, 185, 129, 0.9);
        }
    }

    /* Responsive */
    @@media (max-width: 992px) {
        .sticky-top {
            position: relative !important;
            top: 0 !important;
        }

        .profile-photo-large {
            width: 150px;
            height: 150px;
        }

        .profile-placeholder {
            font-size: 60px;
        }
    }

    @@media (max-width: 768px) {
        .btn-premium {
            padding: 12px 24px;
            font-size: 14px;
        }

        .profile-edit-section h1 {
            font-size: 32px;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                // Check file size (5MB limit)
                if (input.files[0].size > 5 * 1024 * 1024) {
                    alert('File size must be less than 5MB');
                    input.value = '';
                    return;
                }

                var reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById('profilePreview');

                    // If it's a placeholder div, convert to img
                    if (preview.tagName === 'DIV') {
                        const img = document.createElement('img');
                        img.id = 'profilePreview';
                        img.className = 'profile-photo-large';
                        img.src = e.target.result;
                        preview.parentNode.replaceChild(img, preview);
                    } else {
                        preview.src = e.target.result;
                    }
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Auto-dismiss success messages
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert-success');
            alerts.forEach(alert => {
                alert.style.opacity = '0';
                alert.style.transition = 'opacity 0.5s ease';
                setTimeout(() => alert.remove(), 500);
            });
        }, 3000);
    </script>
}
