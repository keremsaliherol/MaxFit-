@model IEnumerable<Maxfit_.Models.CourseSession>

@{
    ViewData["Title"] = "Available Classes";
}

<div class="container-fluid pt-4 px-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="bg-secondary rounded p-4 shadow">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 text-white">
                <i class="fa fa-calendar-alt me-2 text-primary"></i>Available Classes - Join Now!
            </h6>
            <a asp-action="MemberDashboard" class="btn btn-sm btn-outline-primary">
                <i class="fa fa-arrow-left me-1"></i>Back to Dashboard
            </a>
        </div>

        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Class</th>
                        <th scope="col">Date and Time</th>
                        <th scope="col">Trainer</th>
                        <th scope="col">Room</th>
                        <th scope="col">Capacity</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var session in Model)
                        {
                            <tr>
                                <td class="text-primary fw-bold">
                                    <i class="fa fa-dumbbell me-2"></i>@session.Class?.Name
                                </td>
                                <td class="text-white">
                                    <i class="fa fa-calendar me-1 text-info"></i>@session.StartTime.ToString("MMM dd, yyyy")
                                    <br />
                                    <small class="text-muted">
                                        <i class="fa fa-clock me-1"></i>@session.StartTime.ToString("HH:mm") -
                                        @session.EndTime.ToString("HH:mm")
                                    </small>
                                </td>
                                <td class="text-white">
                                    <i class="fa fa-user me-1 text-warning"></i>@session.Trainer?.FirstName
                                    @session.Trainer?.LastName
                                </td>
                                <td class="text-white">
                                    <i class="fa fa-door-open me-1 text-success"></i>@session.Room?.Name
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info text-dark py-2 px-3">@session.Capacity spots</span>
                                </td>
                                <td>
                                    <form asp-action="RegisterForClass" method="post" class="d-inline">
                                        <input type="hidden" name="sessionId" value="@session.CourseSessionId" />
                                        <button type="submit" class="btn btn-success btn-sm w-100">
                                            <i class="fa fa-check me-1"></i>Register
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="fa fa-info-circle me-2"></i>No upcoming classes available at the moment.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
