@model Maxfit_.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Confirm Delete Payment
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this payment record? This action
                        cannot be undone.
                    </div>

                    <h5 class="mb-3">Payment Details:</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Payment ID</dt>
                        <dd class="col-sm-8"><strong>#@Model.PaymentId</strong></dd>

                        <dt class="col-sm-4">Member</dt>
                        <dd class="col-sm-8">
                            @Model.Member?.FirstName @Model.Member?.LastName
                        </dd>

                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">
                            <strong class="text-success">$@Model.Amount.ToString("N2")</strong>
                        </dd>

                        <dt class="col-sm-4">Payment Date</dt>
                        <dd class="col-sm-8">
                            @Model.PaymentDate.ToString("MMMM dd, yyyy")
                        </dd>

                        <dt class="col-sm-4">Method</dt>
                        <dd class="col-sm-8">
                            @Model.PaymentMethod
                        </dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Status</span>
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PaymentId" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
