@model Maxfit_.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded h-100 p-4 border border-warning">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0 text-warning"><i class="fa fa-edit me-2"></i>Edit Room</h6>
                    <a asp-action="Index" class="btn btn-outline-warning btn-sm">Back to List</a>
                </div>

                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="RoomId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Room Name</label>
                            <input asp-for="Name" class="form-control bg-dark text-white border-0" required>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Capacity" class="form-label">Capacity</label>
                            <input asp-for="Capacity" type="number" class="form-control bg-dark text-white border-0" required min="1">
                            <span asp-validation-for="Capacity" class="text-danger small"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control bg-dark text-white border-0" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="col-12 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                <label class="form-check-label" asp-for="IsActive">Active</label>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-warning py-3 w-100 fw-bold text-uppercase text-dark">
                            <i class="fa fa-save me-2"></i>Update Room
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
