@model Maxfit_.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded p-4 border border-danger">
                <div class="text-center mb-4">
                    <i class="fa fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h5 class="text-danger">Delete Room</h5>
                    <p class="text-white">Are you sure you want to delete this room?</p>
                </div>

                <div class="bg-dark rounded p-3 mb-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Room Name:</dt>
                        <dd class="col-sm-8 text-white">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Capacity:</dt>
                        <dd class="col-sm-8 text-white">@Model.Capacity people</dd>

                        <dt class="col-sm-4 text-muted">Description:</dt>
                        <dd class="col-sm-8 text-white">@(Model.Description ?? "N/A")</dd>

                        <dt class="col-sm-4 text-muted">Status:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="RoomId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger py-2 fw-bold">
                            <i class="fa fa-trash me-2"></i>Yes, Delete Room
                        </button>
                        <a asp-action="Index" class="btn btn-outline-light py-2">
                            <i class="fa fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
