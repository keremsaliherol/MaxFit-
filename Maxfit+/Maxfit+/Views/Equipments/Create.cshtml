@model Maxfit_.Models.Equipment

@{
    ViewData["Title"] = "Add New Equipment";
}

<div class="container-fluid pt-4 px-4">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="bg-secondary rounded shadow p-4">
                <div class="d-flex align-items-center justify-content-between mb-4 pb-3 border-bottom border-primary">
                    <h5 class="mb-0 text-white">
                        <i class="fa fa-wrench me-2 text-warning"></i>Add New Equipment
                    </h5>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light">
                        <i class="fa fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label text-white">
                                Equipment Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control bg-dark text-white border-0" 
                                   placeholder="e.g., Treadmill" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Category" class="form-label text-white">
                                Category <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Category" class="form-select bg-dark text-white border-0" required>
                                <option value="">-- Select Category --</option>
                                <option value="Cardio">Cardio</option>
                                <option value="Strength">Strength</option>
                                <option value="Free Weights">Free Weights</option>
                                <option value="Functional">Functional</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Brand" class="form-label text-white">
                                Brand <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Brand" class="form-control bg-dark text-white border-0" 
                                   placeholder="e.g., Life Fitness" required />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Model" class="form-label text-white">
                                Model
                            </label>
                            <input asp-for="Model" class="form-control bg-dark text-white border-0" 
                                   placeholder="e.g., T5-0" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="SerialNumber" class="form-label text-white">
                                Serial Number
                            </label>
                            <input asp-for="SerialNumber" class="form-control bg-dark text-white border-0" 
                                   placeholder="Optional" />
                            <span asp-validation-for="SerialNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PurchaseDate" class="form-label text-white">
                                Purchase Date
                            </label>
                            <input asp-for="PurchaseDate" type="date" class="form-control bg-dark text-white border-0" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label text-white">
                                Location <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Location" class="form-control bg-dark text-white border-0" 
                                   placeholder="e.g., Main Floor, Room 101" required />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="form-check mt-4 pt-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
                                <label class="form-check-label text-white" asp-for="IsActive">
                                    Active Equipment
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top border-dark pt-3 mt-4">
                        <a asp-action="Index" class="btn btn-outline-light">
                            <i class="fa fa-times me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fa fa-check me-1"></i>Add Equipment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
