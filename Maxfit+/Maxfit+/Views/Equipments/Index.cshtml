@model IEnumerable<Maxfit_.Models.Equipment>

@{
    ViewData["Title"] = "Equipment Management";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 text-primary"><i class="fa fa-wrench me-2"></i>Equipment Management</h6>
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus me-2"></i>Add New Equipment</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-white">
                        <th scope="col">Equipment Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand/Model</th>
                        <th scope="col">Location</th>
                        <th scope="col">Purchase Date</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td class="text-white fw-bold">
                                    <i class="fa fa-cog me-2 text-warning"></i>@item.Name
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark py-2 px-3">@item.Category</span>
                                </td>
                                <td class="text-white">
                                    <strong>@item.Brand</strong>
                                @if (!string.IsNullOrEmpty(item.Model))
                                {
                                            <br />

                                    <small class="text-muted">@item.Model</small>
                                }
                                </td>
                                        <td>
                                    <i class="fa fa-map-marker-alt me-1 text-success"></i>
                                    <span class="text-white">@item.Location</span>
                                </td>
                                <td class="text-muted">
                                @(item.PurchaseDate.HasValue ? item.PurchaseDate.Value.ToString("MMM dd, yyyy") : "N/A")
                                </td>
                                <td>
                                @if (item.IsActive)
                                {
                                            <span class="badge bg-success py-2 px-3">
                                                <i class="fa fa-check-circle me-1"></i>Active
                                            </span>
                                }
                                else
                                {
                                            <span class="badge bg-danger py-2 px-3">
                                                <i class="fa fa-times-circle me-1"></i>Inactive
                                            </span>
                                }
                                </td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.EquipmentId">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a class="btn btn-sm btn-light" asp-action="Details" asp-route-id="@item.EquipmentId">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a class="btn btn-sm btn-primary" asp-action="Delete" asp-route-id="@item.EquipmentId">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                            </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
