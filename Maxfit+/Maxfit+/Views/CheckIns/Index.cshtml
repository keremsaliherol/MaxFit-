@model IEnumerable<Maxfit_.Models.CheckIn>

@{
    ViewData["Title"] = "Reception Desk";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-5">
            <div class="bg-secondary rounded h-100 p-4 text-center">
                <h6 class="mb-4">Member Check-In</h6>
                
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success border-0 bg-dark text-success" role="alert">
                        <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger border-0 bg-dark text-danger" role="alert">
                        <i class="fa fa-times-circle me-2"></i>@TempData["Error"]
                    </div>
                }

                <form asp-action="ProcessCheckIn" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <input type="text" name="memberSearch" class="form-control form-control-lg bg-dark text-white border-0 text-center" 
                               placeholder="ID or Name" autofocus>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-3">
                        <i class="fa fa-sign-in-alt me-2"></i>Grant Access
                    </button>
                </form>
                <p class="mt-3 text-muted small">Please verify member's photo after check-in.</p>
            </div>
        </div>

        <div class="col-sm-12 col-xl-7">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Recent Access Logs (Last 10)</h6>
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr class="text-white">
                                <th>Time</th>
                                <th>Member Name</th>
                                <th>Source</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>@log.CheckInTime.ToString("HH:mm:ss")</td>
                                    <td>@log.Member?.FirstName @log.Member?.LastName</td>
                                    <td><span class="badge bg-primary">@log.Source</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>