@model IEnumerable<Maxfit_.Models.CourseSession>

@{
    ViewData["Title"] = "Weekly Schedule";
    var scheduleByDay = ViewBag.ScheduleByDay as Dictionary<DayOfWeek, List<Maxfit_.Models.CourseSession>>;
    var monday = (DateTime)ViewBag.Monday;
    var sunday = (DateTime)ViewBag.Sunday;

    var daysOfWeek = new[] {
DayOfWeek.Monday,
DayOfWeek.Tuesday,
DayOfWeek.Wednesday,
DayOfWeek.Thursday,
DayOfWeek.Friday,
DayOfWeek.Saturday,
DayOfWeek.Sunday
};

    var dayNames = new Dictionary<DayOfWeek, string> {
{ DayOfWeek.Monday, "Monday" },
{ DayOfWeek.Tuesday, "Tuesday" },
{ DayOfWeek.Wednesday, "Wednesday" },
{ DayOfWeek.Thursday, "Thursday" },
{ DayOfWeek.Friday, "Friday" },
{ DayOfWeek.Saturday, "Saturday" },
{ DayOfWeek.Sunday, "Sunday" }
};
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-secondary rounded p-4">
        <!-- Header -->
        <div class="d-flex align-items-center justify-content-between mb-4 pb-3 border-bottom border-primary">
            <div>
                <h5 class="mb-0 text-white">
                    <i class="fa fa-calendar-week me-2 text-primary"></i>Weekly Schedule
                </h5>
                <small class="text-muted">@monday.ToString("dd MMM") - @sunday.ToString("dd MMM yyyy")</small>
            </div>
            <div class="btn-group">
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fa fa-plus me-1"></i>Add Session
                </a>
                <a asp-action="Index" class="btn btn-sm btn-outline-light">
                    <i class="fa fa-list me-1"></i>List View
                </a>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <i class="fa fa-info-circle me-2"></i>No sessions scheduled for this week.
            </div>
        }
        else
        {
            <!-- Weekly Schedule Table -->
            <div class="table-responsive">
                <table class="table table-bordered text-white mb-0">
                    <thead class="bg-dark">
                        <tr>
                            <th style="width: 100px;">Time</th>
                            @foreach (var day in daysOfWeek)
                            {
                                var date = monday.AddDays((int)day - 1);
                                var isToday = date.Date == DateTime.Now.Date;
                                <th class="text-center @(isToday ? "bg-primary" : "")">
                                    <div>@dayNames[day]</div>
                                    <small class="text-muted">@date.ToString("dd/MM")</small>
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            // Get all unique start times
                            var allTimes = Model
                            .Select(s => s.StartTime.TimeOfDay)
                            .Distinct()
                            .OrderBy(t => t)
                            .ToList();
                        }

                        @foreach (var time in allTimes)
                        {
                            <tr>
                                <td class="bg-dark fw-bold">
                                    @TimeSpan.FromTicks(time.Ticks).ToString(@"hh\:mm")
                                </td>
                                @foreach (var day in daysOfWeek)
                                {
                                    var sessions = scheduleByDay.ContainsKey(day)
                                    ? scheduleByDay[day].Where(s => s.StartTime.TimeOfDay == time).ToList()
                                    : new List<Maxfit_.Models.CourseSession>();

                                    <td class="p-1">
                                        @if (sessions.Any())
                                        {
                                            foreach (var session in sessions)
                                            {
                                                var bgClass = session.IsCanceled ? "bg-danger" : "bg-primary";
                                                <div class="@bgClass rounded p-2 mb-1 text-white small">
                                                    <div class="fw-bold">
                                                        <i class="fa fa-dumbbell me-1"></i>@session.Class?.Name
                                                    </div>
                                                    <div class="text-white-50">
                                                        <i class="fa fa-door-open me-1"></i>@session.Room?.Name
                                                    </div>
                                                    <div class="text-white-50">
                                                        <i class="fa fa-user-tie me-1"></i>@session.Trainer?.FirstName
                                                    </div>
                                                    <div class="text-white-50">
                                                        <i class="fa fa-users me-1"></i>@session.Capacity people
                                                    </div>
                                                    <div class="mt-1">
                                                        <a asp-action="Edit" asp-route-id="@session.CourseSessionId"
                                                            class="btn btn-sm btn-warning btn-sm py-0 px-1" title="Edit">
                                                            <i class="fa fa-edit"></i>
                                                        </a>
                                                        @if (session.IsCanceled)
                                                        {
                                                            <span class="badge bg-danger">Canceled</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <div class="text-center text-muted py-2">-</div>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Statistics -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="bg-dark rounded p-3 text-center">
                        <h3 class="text-primary mb-0">@Model.Count()</h3>
                        <small class="text-muted">Total Sessions</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-dark rounded p-3 text-center">
                        <h3 class="text-success mb-0">@Model.Count(s => !s.IsCanceled)</h3>
                        <small class="text-muted">Active Sessions</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-dark rounded p-3 text-center">
                        <h3 class="text-danger mb-0">@Model.Count(s => s.IsCanceled)</h3>
                        <small class="text-muted">Canceled</small>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="bg-dark rounded p-3 text-center">
                        <h3 class="text-info mb-0">@Model.Select(s => s.ClassId).Distinct().Count()</h3>
                        <small class="text-muted">Different Classes</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .table td {
        vertical-align: top;
    }

    .hover-card:hover {
        transform: scale(1.02);
        transition: all 0.2s;
    }
</style>
