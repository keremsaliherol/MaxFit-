@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3>
                        <i class="bi bi-exclamation-triangle"></i> Access Denied
                    </h3>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-shield-lock text-danger" style="font-size: 5rem;"></i>
                    <h4 class="mt-4">You don't have permission to access this page</h4>
                    <p class="text-muted">
                        This page requires special authorization. Please contact your administrator if you believe you should have access.
                    </p>
                    <hr>
                    <div class="d-grid gap-2">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i> Go to Login
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-house"></i> Go to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
