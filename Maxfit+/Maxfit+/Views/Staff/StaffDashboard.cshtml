@model Maxfit_.Models.Staff

@{
    ViewData["Title"] = "My Dashboard";
}

<!-- Premium Staff Dashboard -->
<div class="staff-dashboard-section position-relative overflow-hidden mb-5">
    <div class="hero-bg-overlay"></div>
    <div class="container-fluid px-5 py-5">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show glass-card border-0 shadow-lg mb-4" role="alert">
                <i class="fa fa-check-circle me-2"></i>
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
            </div>
        }
        
        <!-- Welcome Banner -->
        <div class="welcome-banner glass-card p-5 mb-5">
            <div class="welcome-glow"></div>
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold text-white mb-2">
                        Welcome back, <span class="gradient-text">@Model.FirstName</span>!
                    </h1>
                    <p class="lead text-white-70 mb-3">
                        <i class="fa fa-user-tie me-2 gradient-text"></i>
                        @Model.Position
                    </p>
                    <div class="d-flex gap-2">
                        <span class="badge-premium @(Model.IsActive ? "badge-active" : "badge-inactive")">
                            <i class="fa fa-check-circle me-1"></i>
                            @(Model.IsActive ? "Active Staff" : "Inactive")
                        </span>
                        <span class="badge-premium badge-date">
                            <i class="fa fa-calendar me-1"></i>
                            Since @Model.HireDate.ToString("MMM yyyy")
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="row g-4 mb-5">
            <div class="col-lg-4 col-md-6">
                <div class="stat-card stat-card-blue">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-chalkboard-teacher"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Total Sessions</p>
                        <h2 class="stat-value counter">@(ViewBag.TotalSessions ?? 0)</h2>
                    </div>
                    <div class="stat-glow stat-glow-blue"></div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="stat-card stat-card-green">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Completed</p>
                        <h2 class="stat-value counter">@(ViewBag.CompletedSessions ?? 0)</h2>
                    </div>
                    <div class="stat-glow stat-glow-green"></div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="stat-card stat-card-orange">
                    <div class="stat-icon-wrapper">
                        <i class="fa fa-calendar-alt"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Upcoming</p>
                        <h2 class="stat-value counter">@(ViewBag.UpcomingSessionsCount ?? 0)</h2>
                    </div>
                    <div class="stat-glow stat-glow-orange"></div>
                </div>
            </div>
        </div>

        <!-- Upcoming Sessions -->
        <div class="sessions-section">
            <div class="section-header mb-4">
                <h2 class="section-title text-white">
                    <span class="gradient-text">My</span> Upcoming Sessions
                </h2>
                <p class="section-subtitle text-white-70">Your scheduled training sessions</p>
            </div>
            
            <div class="glass-card p-0 overflow-hidden">
                <div class="table-responsive">
                    <table class="table-premium mb-0">
                        <thead>
                            <tr>
                                <th><i class="fa fa-calendar me-2"></i>Date and Time</th>
                                <th><i class="fa fa-dumbbell me-2"></i>Class Name</th>
                                <th><i class="fa fa-door-open me-2"></i>Room</th>
                                <th><i class="fa fa-users me-2"></i>Capacity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.UpcomingSessions != null && ViewBag.UpcomingSessions.Count > 0)
                            {
                                @foreach (var session in ViewBag.UpcomingSessions)
                                {
                                    <tr class="table-row-hover">
                                        <td>
                                            <div class="class-datetime">
                                                <i class="fa fa-clock me-2 gradient-text"></i>
                                                <span>@session.StartTime.ToString("MMM dd, yyyy")</span>
                                                <small class="d-block text-white-50 ms-4 mt-1">
                                                    @session.StartTime.ToString("HH:mm") - @session.EndTime.ToString("HH:mm")
                                                </small>
                                            </div>
                                        </td>
                                        <td class="fw-bold text-white">@session.Class?.Name</td>
                                        <td class="text-white-70">@session.Room?.Name</td>
                                        <td>
                                            <span class="badge-status badge-capacity">
                                                <i class="fa fa-users me-1"></i>@session.Capacity spots
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="empty-state">
                                            <i class="fa fa-calendar-times fa-3x mb-3 text-white-30"></i>
                                            <p class="text-white-50 mb-0">No upcoming sessions scheduled.</p>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
/* Staff Dashboard Styles (similar to Member Dashboard) */

.staff-dashboard-section {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f1419 0%, #1a1f2e 50%, #0f1419 100%);
    position: relative;
}

.hero-bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
        radial-gradient(circle at 20% 30%, rgba(13, 110, 253, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(111, 66, 193, 0.1) 0%, transparent 50%);
    pointer-events: none;
}

.glass-card {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.welcome-banner {
    position: relative;
    overflow: hidden;
}

.welcome-glow {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(13, 110, 253, 0.2) 0%, transparent 70%);
    filter: blur(60px);
    animation: pulse 4s ease-in-out infinite;
}

.gradient-text {
    background: linear-gradient(135deg, #0d6efd 0%, #6f42c1 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.text-white-70 { color: rgba(255, 255, 255, 0.7); }
.text-white-50 { color: rgba(255, 255, 255, 0.5); }
.text-white-30 { color: rgba(255, 255, 255, 0.3); }

.badge-premium {
    padding: 8px 16px;
    border-radius: 12px;
    font-size: 14px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
}

.badge-active {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
}

.badge-inactive {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
}

.badge-date {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

/* Stat Cards */
.stat-card {
    position: relative;
    padding: 32px;
    border-radius: 24px;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-card:hover {
    transform: translateY(-8px);
    border-color: currentColor;
}

.stat-card-blue:hover { border-color: #0d6efd; }
.stat-card-green:hover { border-color: #10b981; }
.stat-card-orange:hover { border-color: #f59e0b; }

.stat-icon-wrapper {
    width: 64px;
    height: 64px;
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    margin-bottom: 20px;
}

.stat-card-blue .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(13, 110, 253, 0.2) 0%, rgba(10, 88, 202, 0.1) 100%);
    color: #0d6efd;
}

.stat-card-green .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.1) 100%);
    color: #10b981;
}

.stat-card-orange .stat-icon-wrapper {
    background: linear-gradient(135deg, rgba(245, 158, 11, 0.2) 0%, rgba(217, 119, 6, 0.1) 100%);
    color: #f59e0b;
}

.stat-label {
    color: rgba(255, 255, 255, 0.7);
    font-size: 14px;
    font-weight: 500;
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.stat-value {
    color: white;
    font-size: 36px;
    font-weight: 700;
    margin: 0;
}

.stat-glow {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0;
    transition: opacity 0.4s ease;
    top: -50%;
    right: -50%;
}

.stat-card:hover .stat-glow { opacity: 1; }

.stat-glow-blue { background: radial-gradient(circle, rgba(13, 110, 253, 0.3) 0%, transparent 70%); }
.stat-glow-green { background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, transparent 70%); }
.stat-glow-orange { background: radial-gradient(circle, rgba(245, 158, 11, 0.3) 0%, transparent 70%); }

/* Section Headers */
.section-header { text-align: center; }
.section-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 8px;
}
.section-subtitle { font-size: 18px; }

/* Table */
.table-premium {
    width: 100%;
}

.table-premium thead {
    background: rgba(255, 255, 255, 0.05);
}

.table-premium thead th {
    padding: 20px 24px;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    text-transform: uppercase;
    font-size: 13px;
    letter-spacing: 1px;
    border: none;
}

.table-premium tbody tr {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
}

.table-premium tbody td {
    padding: 24px;
    color: rgba(255, 255, 255, 0.8);
    border: none;
}

.table-row-hover:hover {
    background: rgba(255, 255, 255, 0.03);
}

.badge-status {
    padding: 8px 16px;
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
}

.badge-capacity {
    background: linear-gradient(135deg, rgba(13, 110, 253, 0.2) 0%, rgba(10, 88, 202, 0.1) 100%);
    color: #0d6efd;
    border: 1px solid rgba(13, 110, 253, 0.3);
}

.empty-state {
    padding: 40px;
}

/* Animations */
@@keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
}

/* Responsive */
@@media (max-width: 768px) {
    .section-title { font-size: 32px; }
    .stat-value { font-size: 28px; }
}
</style>
