@model Maxfit_.Models.Staff

<div class="container-fluid pt-4 px-4">
    <div class="row g-4 justify-content-center">
        <div class="col-sm-12 col-xl-8">
            <div class="bg-secondary rounded p-4 border border-primary">
                <h6 class="mb-4 text-primary">Hire New Staff</h6>
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control bg-dark text-white border-0" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control bg-dark text-white border-0" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Position" class="form-label">Position</label>
                            <input asp-for="Position" class="form-control bg-dark text-white border-0"
                                placeholder="e.g. Trainer">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control bg-dark text-white border-0">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control bg-dark text-white border-0"
                                placeholder="staff@example.com" required>
                            <small class="text-muted">This email will be used for login</small>
                        </div>
                        <div class="col-md-12 mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" checked>
                                <label class="form-check-label" asp-for="IsActive">Is Staff Active?</label>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 py-3 mt-3 fw-bold">SAVE STAFF</button>
                </form>
            </div>
        </div>
    </div>
</div>